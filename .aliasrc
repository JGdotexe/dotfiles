#----------Aliases----------#

#-----List-Kernel-----#
alias kernels='ls /boot | grep vmlinuz'

#-----exa/ls-----#
alias ll='eza -l -all --icons --sort=type --group-directories-first --group'
alias ls='eza --icons --sort=type'
alias tree='eza -al --tree --icons'
alias cat='bat'
alias ex='exit'

#-----dnf-----#
alias dnf='dnf5'
alias sysupdate='sudo dnf5 update'
alias i='sudo dnf5 install'
alias s='sudo dnf5 search'
alias rmp='sudo dnf5 remove'

alias vim='nvim'
alias cp='cp -i'
alias mv='mv -i'

#-----Navigation-----#
alias ..='cd ..'

#-----Distrobox-----#
alias dtb-enter='distrobox enter --root'

#-----Docker-----#
alias runewbui='sudo docker run -d --network=host -v open-webui:/app/backend/data -e OLLAMA_BASE_URL=http://127.0.0.1:11434 --restart always ghcr.io/open-webui/open-webui:main'

#-----Kittens-----#

alias icat='kitten icat'

